<% include partials/header %>

<div class="container">
    
    <div class="modal-body row">
        <div class="col-md-9">
            <% for(var i = 0; i < topPost.length; i++){ %>
            <div class=" content">
                    
                    <div class="row">
                        <div class="col-sm-1">
                            <ul>
                                <li>
                                    <% if(currentUser){ %>
                                        <% var found; %>
                                        <% for(var y = 0; y < user.ratedPost.length; y++){ %>
                                            <% if(user.ratedPost[y].post._id.toString() == topPost[i]._id.toString()){ %>
                                                    <% if(user.ratedPost[y].like){ %>
                                                        <i class="fas fa-circle"></i> 
                                                        <% found = true; %>
                                                    <% } %>
                                            <% } %>
                                        <% } %>
                                        <% if(!found){ %>
                                            <form action="/l/<%= topPost[i].category.name%>/post/<%= topPost[i].title%>/like" method="POST"> <button><i class="fas fa-caret-up"></i></button></form>
                                            <% } %>
                                    <% } else { %>
                                        <form action="/l/<%= topPost[i].category.name%>/post/<%= topPost[i].title%>/dislike" method="POST"> <button><i class="fas fa-caret-up"></i></button></form>
                                    <% } %>
                                </li>
                                <li><%= (topPost[i].rating.length - topPost[i].dislike.length) %></li>
                                <li>
                                <% if(currentUser){ %>
                                    <% var found = false; %>
                                    <% for(var y = 0; y < user.ratedPost.length; y++){ %>
                                        <% if(user.ratedPost[y].post._id.toString() == topPost[i]._id.toString()){ %>
                                                <% if(!user.ratedPost[y].like){ found = true; %>
                                                    <i class="fas fa-circle"></i> 
                                                <% } %>
                                        <% } %>
                                    <% } %>
                                    <% if(!found){ %>
                                        <form action="/l/<%= topPost[i].category.name%>/post/<%= topPost[i].title%>/like" method="POST"> <button><i class="fas fa-caret-down"></i></button></form>
                                        <% } %>
                                <% } else { %>
                                    <form action="/l/<%= topPost[i].category.name%>/post/<%= topPost[i].title%>/dislike" method="POST"> <button><i class="fas fa-caret-down"></i></button></form>
                                <% } %>
                                </li>
                            </ul>
                        </div>
                        <div class="col-sm-11 post">
                            <p>posted by <%= topPost[i].author.username%>   <span id="date<%= i%>">    10 minutes</span><script>timeDifference('<%= topPost[i].date%>', '<%= i %>')</script> ago  <small class="text-muted"> /l/<%= topPost[i].category.name%></small></small></p>
                            <h1><%= topPost[i].title %></h1>
                            <p><%= topPost[i].content %></p>
                            <a href="/l/<%= topPost[i].category.name%>/post/<%= topPost[i].title%>">Comment</a>
                        </div>
                   
                    </div>
                    <% } %>
            </div> 
            
        </div>
        <div class="hidden-sm col-md-3">
                <% if(currentUser){ %>
                <div class=" content pl-0 pr-0">
                    <div class="post pl-2 pr-2 pt-2 pb-2">
                        <h5>Home</h5>
                        <p>Your pesonal reddit homepage</p>
                        <a href="/post/new"><button type="submit" class="btn btn-primary mb-2 full-content">CREATE POST</button></a>
                        <a href="/l/new"><button type="submit" class="btn btn-primary full-content">CREATE COMMUNITY</button></a>
                    </div>
                </div>
                <% } %>
            </div>
        
    </div>
</div>
<% include partials/footer %>
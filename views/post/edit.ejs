<% include ../partials/header %>
<div class="container">
    <div class="content post pt-3">
        <div class="row">
            <div class="col-md-4">
                <button type="submit" class="btn btn-primary mb-2 full-content tablink active" onclick="openPostTab(event, 'text')">Text</button>
            </div>

        </div>
        <div id="text" class="tabContent">
            <form action="/l/<%= category.name%>/post/<%= post._id%>?_method=PUT" method="POST">
                <div class="form-group">
                    <label for="post[title]">Title</label>
                    <input type="text" class="form-control" name="title"  value="<%= post.title%>">
                </div>
                <div class="form-group">
                    <label for="txtArea">Content</label> <br>
                    <textarea id="txtArea" onkeypress="onTextChange('txtArea')" name="content" rows="5" cols="33" class="full-content"><%= post.content%></textarea>
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-primary mb-2 full-content">EDIT POST</button>
                </div>

            </form>
        </div>

    </div>
</div>
<% include ../partials/footer %>